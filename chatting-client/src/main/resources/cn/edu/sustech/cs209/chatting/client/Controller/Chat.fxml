<VBox prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.edu.sustech.cs209.chatting.client.Controller.ChatController">
   <children>
     <MenuBar VBox.vgrow="NEVER">
        <menus>
          <Menu mnemonicParsing="false" text="Chat">
             <items>
               <MenuItem mnemonicParsing="false" onAction="#createPrivateChat" text="New Private Chat" />
               <MenuItem mnemonicParsing="false" onAction="#createGroupChat" text="New Group Chat" />
             </items>
          </Menu>
        </menus>
     </MenuBar>
     <SplitPane dividerPositions="0.23925501432664756, 0.7320916905444126" focusTraversable="true" VBox.vgrow="ALWAYS">
        <items>
            <VBox prefHeight="334.0" prefWidth="219.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                            <Label fx:id="currentUsername" maxHeight="1.7976931348623157E308" prefHeight="38.0" prefWidth="71.0" text="Username">
                              <font>
                                <Font size="18.0" fx:id="x3" />
                              </font>
                              <textFill>
                                <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
                              </textFill>
                            </Label>
                           </children></VBox>
                     </children>
                  </HBox>
                <ListView fx:id="chatGroupListView" onMouseClicked="#setChatGroupId" prefHeight="331.0" prefWidth="231.0" />
               </children>
            </VBox>
          <SplitPane dividerPositions="0.6467065868263473" orientation="VERTICAL" prefHeight="300.0">
             <items>
               <ListView fx:id="chatContentListView" prefHeight="167.0" prefWidth="344.0" />
                  <VBox prefHeight="114.0" prefWidth="526.0">
                     <children>
                    <TextArea fx:id="inputArea" prefHeight="95.0" prefWidth="526.0" style="-fx-border-width: 0;" />
                     <HBox alignment="CENTER_RIGHT" prefHeight="20.0" prefWidth="526.0" style="-fx-border-width: 0; -fx-background-color: white;">
                        <children>
                          <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#doSendMessage" prefHeight="36.0" prefWidth="85.0" text="Send" HBox.hgrow="ALWAYS" />
                        </children>
                     </HBox>
                     </children>
                  </VBox>
             </items>
          </SplitPane>
            <VBox prefHeight="334.0" prefWidth="226.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="60.0" prefWidth="182.0">
                     <children>
                        <Label text="Online User" />
                     </children>
                  </VBox>
                  <ListView fx:id="userListView" prefHeight="282.0" prefWidth="182.0" />
               </children>
            </VBox>
        </items>
     </SplitPane>
     <HBox id="HBox" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="700.0" spacing="5.0" VBox.vgrow="NEVER">
       <padding>
         <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
       </padding>
        <children>
          <Pane prefHeight="22.0" prefWidth="578.0" HBox.hgrow="ALWAYS" />
          <Label fx:id="onlineUserCnt" text="Online: 1" textFill="$x4" HBox.hgrow="NEVER">
               <font>
                  <Font size="11.0" />
               </font></Label>
        </children>
     </HBox>
   </children>
